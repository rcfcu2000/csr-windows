<ResourceDictionary
    x:Class="csr_windows.Resources.Styles.WindowStyles.WindowsStyle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:csr_windows.Resources.AttachProperties"
    xmlns:controls="clr-namespace:csr_windows.Resources.Controls"
    xmlns:converter="clr-namespace:csr_windows.Resources.Converters"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:o="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:resourcesEnums="clr-namespace:csr_windows.Resources.Enumeration"
    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/csr-windows.Resources;component/Theme/Theme.xaml" />
        <ResourceDictionary Source="pack://application:,,,/csr-windows.Resources;component/Theme/CommonTheme.xaml" />
        <ResourceDictionary Source="pack://application:,,,/csr-windows.Resources;component/Styles/ButtonStyles/ButtonStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/csr-windows.Resources;component/Styles/MenuStyles/MenuItemStyles.xaml" />
        <ResourceDictionary Source="pack://application:,,,/csr-windows.Resources;component/Styles/ToggleButtonStyles/ToggleButtonStyle.xaml" />
        <ResourceDictionary Source="pack://application:,,,/csr-windows.Resources;component/Images/ImageManagers/Main/MainImagesDictionary.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <system:Double x:Key="PopupMenuHorizontalOffset">15</system:Double>
    <system:Double x:Key="PopupMenuVerticalOffset">63</system:Double>
    <converter:DPIConverter x:Key="DPIConverter" />


    <Style x:Key="WindowChromeStyle" TargetType="{x:Type Window}">
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="ResizeMode" Value="NoResize" />
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome
                    CaptionHeight="0"
                    GlassFrameThickness="0,0,0,1"
                    UseAeroCaptionButtons="False" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MainWindowsStyle" TargetType="{x:Type Window}">
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome
                    CaptionHeight="0"
                    GlassFrameThickness="0"
                    UseAeroCaptionButtons="False" />
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#FF2d3755" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FontFamily" Value="Microsoft YaHei" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Window}">
                    <AdornerDecorator>
                        <!--<controls:DpiDecorator>-->
                        <Grid>

                            <Border
                                Margin="5"
                                Background="Black"
                                CornerRadius="16"
                                Opacity="0.05">
                                <Border.Effect>
                                    <BlurEffect KernelType="Box" RenderingBias="Quality" />
                                </Border.Effect>
                            </Border>

                            <Border
                                x:Name="root"
                                Margin="5"
                                Padding="0"
                                Background="White"
                                BorderBrush="#19000000"
                                BorderThickness="1">
                                <Grid>
                                    <TextBlock
                                        Margin="24,21,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        FontSize="14"
                                        Foreground="#818A92"
                                        Text="{Binding VersionString, StringFormat={}V{0}}" />

                                    <AdornerDecorator KeyboardNavigation.IsTabStop="False">
                                        <ContentPresenter
                                            Margin="0,0,-0.501,0"
                                            Content="{TemplateBinding Content}"
                                            KeyboardNavigation.TabNavigation="Cycle" />
                                    </AdornerDecorator>
                                </Grid>
                            </Border>
                        </Grid>
                        <!--</controls:DpiDecorator>-->

                    </AdornerDecorator>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>